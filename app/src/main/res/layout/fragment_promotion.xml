<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="categoryItems"
            type="com.menlopark.rentsyuser.model.dummy.CategoryContent.CategoryItem"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_promocode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/gray_box"
                    android:backgroundTint="@color/white"
                    android:gravity="left"
                    android:minWidth="@dimen/_100sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="@string/enter_promo_code"
                    android:textAllCaps="false"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/_14sdp" />


                <Button
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_blue_rectangle"
                    android:fontFamily="@font/helvetica_neue"
                    android:minWidth="@dimen/_90sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="@string/apply"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/img_batch"
                android:layout_below="@+id/ll_promocode"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue_bold"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:text="@string/promotion_text"
                android:textColor="@color/promotional_text"
                android:textSize="@dimen/_26sdp"
                android:gravity="center"
                android:layout_below="@+id/img_badge"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_title"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:weightSum="3.5"
                android:layout_marginTop="@dimen/_15sdp">




                <ImageView
                    android:layout_weight="0.5"
                    android:id="@+id/detail_desc_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue"
                    android:src="@drawable/add"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/detail_desc"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/helvetica_neue"
                        android:maxWidth="@dimen/_220sdp"
                        android:text="@string/invite_earn"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp"
                        android:textAllCaps="true"
                        android:paddingTop="@dimen/_5sdp"   />
                    <TextView
                        android:id="@+id/detail_condition"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/helvetica_neue"
                        android:maxWidth="@dimen/_220sdp"
                        android:text="@string/first_booking"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_6sdp"
                        android:textAllCaps="false"
                        android:layout_toRightOf="@+id/detail_image"
                        android:gravity="center"
                        android:layout_gravity="center"
                       />

                </LinearLayout>



                <Button
                    android:layout_weight="0.5"
                    android:id="@+id/invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/coloPink"
                    android:gravity="center"
                    android:text="@string/invite"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"/>

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/list_item_gray" />


















        </RelativeLayout>
    </ScrollView>

</layout>

