<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent" android:layout_width="match_parent">



<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_list_summary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_slide" />

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_image"
                    android:fontFamily="@font/helvetica_neue_bold"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="@string/booking_summary"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp" />


                <LinearLayout
                    android:id="@+id/ll_cat_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_title"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/iv_brand"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_slide" />

                    <TextView
                        android:id="@+id/tv_title_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="AAA"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/ll_cat_image"
                    android:background="@color/list_item_gray" />

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="center"
                        android:text="@string/company"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_companyname_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_name"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_one"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="center"
                        android:text="@string/item"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_item_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_amenities"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_two"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="center"
                        android:text="@string/quantity"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_quantity_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="23"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_three"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="center"
                        android:text="@string/date"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_date_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_date"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_four"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="center"
                        android:text="@string/time"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_time_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_time"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_five"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="center"
                        android:text="@string/length"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_length_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_duration"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>


                <View
                    android:id="@+id/view01"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/ll_six"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@color/list_item_gray" />

                <LinearLayout
                    android:id="@+id/ll_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view01"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:gravity="center"
                        android:text="@string/price"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_price_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_price"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_01"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:gravity="center"
                        android:text="@string/rental_period"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_recent_period_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_duration"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_02"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/helvetica_neue_bold"
                        android:gravity="center"
                        android:text="@string/total"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_total_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_neue"
                        android:gravity="end"
                        android:text="@string/dummy_total"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/ll_03"
                    android:background="@color/list_item_gray" />


            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/btn_list_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_another"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorblue"
                android:gravity="center"
                android:minWidth="@dimen/_100sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Cancel Booking"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnConfirmBookNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_another"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/coloPink"
                android:gravity="center"
                android:minWidth="@dimen/_100sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="10dp"
                android:text="@string/bookin_now_confirm"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

